FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
      libgl1 libglib2.0-0 && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY rmbg-api/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

ENV U2NET_HOME=/opt/models
RUN python - <<'PY'
from rembg import new_session
new_session('u2net')
PY

COPY rmbg-api/app.py ./app.py
EXPOSE 7860
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "7860", "--workers", "1", "--timeout-keep-alive", "15"]
